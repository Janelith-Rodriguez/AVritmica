@page "/consultas"
@using AVritmica.BD.Data.Entity
@using AVritmica.Client.Servicios.Entidades
@inject IConsultaServicio consultaServicio
@inject NavigationManager navigation

<h3>Consultas de Clientes</h3>

<button class="btn btn-primary mb-3" @onclick="NuevaConsulta">
    <i class="bi bi-chat-left-text"></i> Nueva Consulta
</button>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (error)
{
    <div class="alert alert-danger">
        <h5>Error al cargar las consultas</h5>
        <p>@mensajeError</p>
        <button class="btn btn-warning" @onclick="Recargar">Reintentar</button>
    </div>
}
else if (consultas == null || !consultas.Any())
{
    <div class="alert alert-info">
        No hay consultas registradas.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Mensaje</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var consulta in consultas)
                {
                    <tr>
                        <td>@consulta.Id</td>
                        <td>@consulta.Nombre</td>
                        <td>@consulta.Email</td>
                        <td class="text-truncate" style="max-width: 200px;" title="@consulta.Mensaje">
                            @(consulta.Mensaje.Length > 50 ? consulta.Mensaje.Substring(0, 50) + "..." : consulta.Mensaje)
                        </td>
                        <td>@consulta.FechaEnvio.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <button class="btn btn-sm btn-info" @onclick="() => VerConsulta(consulta.Id)" title="Ver">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => EliminarConsulta(consulta)" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Consulta>? consultas;
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarConsultas();
    }

    private async Task CargarConsultas()
    {
        try
        {
            cargando = true;
            error = false;
            StateHasChanged();

            var respuesta = await consultaServicio.Get();
            if (!respuesta.Error)
            {
                consultas = respuesta.Respuesta;
            }
            else
            {
                error = true;
                mensajeError = await respuesta.ObtenerError();
            }
        }
        catch (Exception ex)
        {
            error = true;
            mensajeError = $"Error: {ex.Message}";
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private void Recargar() => CargarConsultas();
    private void NuevaConsulta() => navigation.NavigateTo("/consultas/nueva");
    private void VerConsulta(int id) => navigation.NavigateTo($"/consultas/detalles/{id}");

    private async Task EliminarConsulta(Consulta consulta)
    {
        if (await jsRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar la consulta de {consulta.Nombre}?"))
        {
            var respuesta = await consultaServicio.Delete(consulta.Id);
            if (!respuesta.Error)
            {
                await CargarConsultas();
                await jsRuntime.InvokeVoidAsync("alert", "Consulta eliminada correctamente");
            }
            else
            {
                var errorMsg = await respuesta.ObtenerError();
                await jsRuntime.InvokeVoidAsync("alert", errorMsg);
            }
        }
    }

    [Inject] private IJSRuntime jsRuntime { get; set; } = default!;
}
