@page "/usuarios"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation

<h3>Gestión de Usuarios</h3>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="NuevoUsuario">Nuevo Usuario</button>
        <button class="btn btn-outline-secondary" @onclick="Refrescar">Refrescar</button>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Buscar por nombre, email..." @bind="terminoBusqueda" @oninput="OnBuscar" />
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="filtroTipoUsuario">
                <option value="">Todos los tipos</option>
                <option value="Cliente">Cliente</option>
                <option value="Administrador">Administrador</option>
                <option value="Vendedor">Vendedor</option>
            </select>
        </div>
        <div class="col-md-3">
            <button class="btn btn-info w-100" @onclick="ExportarUsuarios">Exportar Lista</button>
        </div>
    </div>

    @if (usuarios?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre Completo</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Tipo Usuario</th>
                        <th>Carritos</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in usuariosFiltrados)
                    {
                        <tr>
                            <td>@usuario.Id</td>
                            <td>
                                <strong>@usuario.Nombre @usuario.Apellido</strong>
                            </td>
                            <td>@usuario.Email</td>
                            <td>@(string.IsNullOrEmpty(usuario.Telefono) ? "No especificado" : usuario.Telefono)</td>
                            <td>
                                <span class="badge @GetTipoUsuarioBadgeClass(usuario.TipoUsuario)">@usuario.TipoUsuario</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@usuario.Carritos.Count</span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-info" @onclick="() => VerDetalles(usuario.Id)" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-warning" @onclick="() => EditarUsuario(usuario.Id)" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => EliminarUsuario(usuario)" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => CambiarTipoUsuario(usuario)" title="Cambiar tipo">
                                    <i class="fas fa-user-cog"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="alert alert-info">
            <strong>Total de usuarios:</strong> @usuariosFiltrados.Count
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No se encontraron usuarios.
        </div>
    }
}

@code {
    private List<Usuario> usuarios = new();
    private List<Usuario> usuariosFiltrados = new();
    private bool cargando = true;
    private string terminoBusqueda = string.Empty;
    private string filtroTipoUsuario = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await CargarUsuarios();
    }

    private async Task CargarUsuarios()
    {
        cargando = true;
        StateHasChanged();

        try
        {
            usuarios = await Http.GetFromJsonAsync<List<Usuario>>("api/Usuarios") ?? new();
            FiltrarUsuarios();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al cargar usuarios: {ex.Message}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private void FiltrarUsuarios()
    {
        usuariosFiltrados = usuarios;

        if (!string.IsNullOrEmpty(terminoBusqueda))
        {
            usuariosFiltrados = usuariosFiltrados.Where(u =>
                u.Nombre?.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase) == true ||
                u.Apellido?.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase) == true ||
                u.Email?.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase) == true ||
                u.Telefono?.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase) == true
            ).ToList();
        }

        if (!string.IsNullOrEmpty(filtroTipoUsuario))
        {
            usuariosFiltrados = usuariosFiltrados.Where(u => u.TipoUsuario == filtroTipoUsuario).ToList();
        }
    }

    private void OnBuscar(ChangeEventArgs e)
    {
        terminoBusqueda = e.Value?.ToString() ?? string.Empty;
        FiltrarUsuarios();
    }

    private string GetTipoUsuarioBadgeClass(string tipoUsuario)
    {
        return tipoUsuario switch
        {
            "Administrador" => "bg-danger",
            "Vendedor" => "bg-warning",
            "Cliente" => "bg-success",
            _ => "bg-secondary"
        };
    }

    private void NuevoUsuario()
    {
        Navigation.NavigateTo("/usuarios/nuevo");
    }

    private void VerDetalles(int id)
    {
        Navigation.NavigateTo($"/usuarios/detalles/{id}");
    }

    private void EditarUsuario(int id)
    {
        Navigation.NavigateTo($"/usuarios/editar/{id}");
    }

    private async Task EliminarUsuario(Usuario usuario)
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm",
            $"¿Está seguro de eliminar al usuario {usuario.Nombre} {usuario.Apellido}?");

        if (confirmado)
        {
            try
            {
                var response = await Http.DeleteAsync($"api/Usuarios/{usuario.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Usuario eliminado correctamente");
                    await CargarUsuarios();
                }
                else
                {
                    var error = await response.Content.ReadAsStringAsync();
                    await JS.InvokeVoidAsync("alert", $"Error al eliminar usuario: {error}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
            }
        }
    }

    private async Task CambiarTipoUsuario(Usuario usuario)
    {
        var nuevoTipo = await JS.InvokeAsync<string>("prompt",
            "Ingrese el nuevo tipo de usuario:", usuario.TipoUsuario);

        if (!string.IsNullOrEmpty(nuevoTipo))
        {
            try
            {
                var response = await Http.PostAsJsonAsync($"api/Usuarios/actualizar-tipo-usuario/{usuario.Id}", nuevoTipo);

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "Tipo de usuario actualizado correctamente");
                    await CargarUsuarios();
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", "Error al actualizar el tipo de usuario");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
            }
        }
    }

    private async Task ExportarUsuarios()
    {
        try
        {
            var usuariosExportar = usuariosFiltrados.Select(u => new
            {
                ID = u.Id,
                Nombre = u.Nombre,
                Apellido = u.Apellido,
                Email = u.Email,
                Teléfono = u.Telefono,
                Tipo_Usuario = u.TipoUsuario,
                Dirección = u.Direccion,
                Carritos_Activos = u.Carritos.Count(c => c.Estado == "Activo"),
                Total_Carritos = u.Carritos.Count
            });

            var json = System.Text.Json.JsonSerializer.Serialize(usuariosExportar, new System.Text.Json.JsonSerializerOptions
            {
                WriteIndented = true
            });

            await JS.InvokeVoidAsync("descargarArchivo", "usuarios.json", json);
            await JS.InvokeVoidAsync("alert", "Lista de usuarios exportada correctamente");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al exportar: {ex.Message}");
        }
    }

    private async Task Refrescar()
    {
        await CargarUsuarios();
    }
}
