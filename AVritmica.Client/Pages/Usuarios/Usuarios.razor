@page "/usuarios"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation

<h3>Gestión de Usuarios</h3>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="NuevoUsuario">
            <i class="fas fa-plus"></i> Nuevo Usuario
        </button>
        <button class="btn btn-outline-secondary" @onclick="Refrescar">
            <i class="fas fa-sync-alt"></i> Refrescar
        </button>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Buscar por nombre, email..." @bind="terminoBusqueda" @oninput="OnBuscar" />
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="filtroTipoUsuario">
                <option value="">Todos los tipos</option>
                <option value="Cliente">Cliente</option>
                <option value="Administrador">Administrador</option>
                <option value="Vendedor">Vendedor</option>
            </select>
        </div>
        <div class="col-md-3">
            <button class="btn btn-info w-100" @onclick="ExportarUsuarios">
                <i class="fas fa-download"></i> Exportar Lista
            </button>
        </div>
    </div>

    @if (usuarios?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Tipo Usuario</th>
                        <th>Carritos</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in usuariosFiltrados)
                    {
                        <tr>
                            <td>
                                <strong>@usuario.Nombre @usuario.Apellido</strong>
                                @if (!string.IsNullOrEmpty(usuario.Direccion))
                                {
                                    <br />
                                    <small class="text-muted">
                                        <i class="fas fa-map-marker-alt"></i> @usuario.Direccion
                                    </small>
                                }
                            </td>
                            <td>
                                <i class="fas fa-envelope text-muted me-1"></i>@usuario.Email
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(usuario.Telefono))
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                                else
                                {
                                    <i class="fas fa-phone text-muted me-1"></i>
                                    @usuario.Telefono
                                }
                            </td>
                            <td>
                                <span class="badge @GetTipoUsuarioBadgeClass(usuario.TipoUsuario)">@usuario.TipoUsuario</span>
                            </td>
                            <td>
                                @if (usuario.Carritos.Count > 0)
                                {
                                    <span class="badge bg-primary" title="@usuario.Carritos.Count carritos">
                                        <i class="fas fa-shopping-cart"></i> @usuario.Carritos.Count
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Sin carritos</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group-vertical btn-group-sm" role="group">
                                    <!-- Botón Ver Detalles con ojo -->
                                    <button class="btn btn-info" @onclick="() => VerDetalles(usuario.Id)" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <!-- Botón Editar con lápiz -->
                                    <button class="btn btn-warning" @onclick="() => EditarUsuario(usuario.Id)" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <!-- Botón Eliminar con tacho de basura -->
                                    <button class="btn btn-danger" @onclick="() => EliminarUsuario(usuario)" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="alert alert-info">
            <i class="fas fa-users me-2"></i>
            <strong>Total de usuarios:</strong> @usuariosFiltrados.Count |
            <strong>Clientes:</strong> @usuariosFiltrados.Count(u => u.TipoUsuario == "Cliente") |
            <strong>Administradores:</strong> @usuariosFiltrados.Count(u => u.TipoUsuario == "Administrador") |
            <strong>Vendedores:</strong> @usuariosFiltrados.Count(u => u.TipoUsuario == "Vendedor")
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-users fa-3x mb-3 text-muted"></i>
            <h4>No se encontraron usuarios</h4>
            <p>@(usuarios.Any() ? "No hay usuarios que coincidan con los filtros aplicados." : "No hay usuarios registrados en el sistema.")</p>
            @if (!usuarios.Any())
            {
                <button class="btn btn-primary" @onclick="NuevoUsuario">
                    <i class="fas fa-plus"></i> Registrar Primer Usuario
                </button>
            }
        </div>
    }
}

@code {
    private List<Usuario> usuarios = new();
    private List<Usuario> usuariosFiltrados = new();
    private bool cargando = true;
    private string terminoBusqueda = string.Empty;
    private string filtroTipoUsuario = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await CargarUsuarios();
    }

    private async Task CargarUsuarios()
    {
        cargando = true;
        StateHasChanged();

        try
        {
            usuarios = await Http.GetFromJsonAsync<List<Usuario>>("api/Usuarios") ?? new();
            FiltrarUsuarios();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"❌ Error al cargar usuarios: {ex.Message}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private void FiltrarUsuarios()
    {
        usuariosFiltrados = usuarios;

        if (!string.IsNullOrEmpty(terminoBusqueda))
        {
            usuariosFiltrados = usuariosFiltrados.Where(u =>
                u.Nombre?.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase) == true ||
                u.Apellido?.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase) == true ||
                u.Email?.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase) == true ||
                u.Telefono?.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase) == true
            ).ToList();
        }

        if (!string.IsNullOrEmpty(filtroTipoUsuario))
        {
            usuariosFiltrados = usuariosFiltrados.Where(u => u.TipoUsuario == filtroTipoUsuario).ToList();
        }
    }

    private void OnBuscar(ChangeEventArgs e)
    {
        terminoBusqueda = e.Value?.ToString() ?? string.Empty;
        FiltrarUsuarios();
    }

    private string GetTipoUsuarioBadgeClass(string tipoUsuario)
    {
        return tipoUsuario switch
        {
            "Administrador" => "bg-danger",
            "Vendedor" => "bg-warning text-dark",
            "Cliente" => "bg-success",
            _ => "bg-secondary"
        };
    }

    private void NuevoUsuario()
    {
        Navigation.NavigateTo("/usuarios/nuevo");
    }

    private void VerDetalles(int id)
    {
        Navigation.NavigateTo($"/usuarios/detalles/{id}");
    }

    private void EditarUsuario(int id)
    {
        Navigation.NavigateTo($"/usuarios/editar/{id}");
    }

    private async Task EliminarUsuario(Usuario usuario)
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm",
            $"¿Está seguro de eliminar al usuario?\n\n" +
            $"👤 {usuario.Nombre} {usuario.Apellido}\n" +
            $"📧 {usuario.Email}\n" +
            $"🎯 {usuario.TipoUsuario}\n\n" +
            "Esta acción no se puede deshacer.");

        if (confirmado)
        {
            try
            {
                var response = await Http.DeleteAsync($"api/Usuarios/{usuario.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "✅ Usuario eliminado correctamente");
                    await CargarUsuarios();
                }
                else
                {
                    var error = await response.Content.ReadAsStringAsync();
                    await JS.InvokeVoidAsync("alert", $"❌ Error al eliminar usuario: {error}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"❌ Error: {ex.Message}");
            }
        }
    }

    private async Task ExportarUsuarios()
    {
        try
        {
            var usuariosExportar = usuariosFiltrados.Select(u => new
            {
                Nombre = u.Nombre,
                Apellido = u.Apellido,
                Email = u.Email,
                Teléfono = u.Telefono,
                Tipo_Usuario = u.TipoUsuario,
                Dirección = u.Direccion,
                Carritos_Activos = u.Carritos.Count(c => c.Estado == "Activo"),
                Total_Carritos = u.Carritos.Count
            });

            var json = System.Text.Json.JsonSerializer.Serialize(usuariosExportar, new System.Text.Json.JsonSerializerOptions
            {
                WriteIndented = true
            });

            await JS.InvokeVoidAsync("descargarArchivo", "usuarios.json", json);
            await JS.InvokeVoidAsync("alert", "✅ Lista de usuarios exportada correctamente");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"❌ Error al exportar: {ex.Message}");
        }
    }

    private async Task Refrescar()
    {
        await CargarUsuarios();
        await JS.InvokeVoidAsync("alert", "✅ Lista de usuarios actualizada");
    }
}
