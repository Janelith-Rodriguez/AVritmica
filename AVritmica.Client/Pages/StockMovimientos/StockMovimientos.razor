@page "/stock-movimientos"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation

<PageTitle>AVritmica - Movimientos de Stock</PageTitle>

<h3>Movimientos de Stock</h3>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card bg-light">
                <div class="card-body py-2">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center">
                                <h4 class="text-primary mb-0">@estadisticas.TotalMovimientos</h4>
                                <small class="text-muted">Total Movimientos</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h4 class="text-success mb-0">@estadisticas.TotalEntradas</h4>
                                <small class="text-muted">Entradas</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h4 class="text-danger mb-0">@estadisticas.TotalSalidas</h4>
                                <small class="text-muted">Salidas</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h4 class="text-info mb-0">@estadisticas.MovimientosHoy</h4>
                                <small class="text-muted">Hoy</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-outline-primary" @onclick="ToggleFiltros">
                <i class="fas fa-filter"></i> Filtros
            </button>
            <button class="btn btn-success" @onclick="NuevoMovimiento">
                <i class="fas fa-plus"></i> Nuevo Movimiento
            </button>
        </div>
    </div>

    @if (mostrarFiltros)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Filtros de Búsqueda</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label class="form-label">Tipo Movimiento</label>
                            <select class="form-select" @bind="filtroTipoMovimiento">
                                <option value="">Todos</option>
                                <option value="Entrada">Entrada</option>
                                <option value="Salida">Salida</option>
                                <option value="Compra">Compra</option>
                                <option value="Venta">Venta</option>
                                <option value="Ajuste Positivo">Ajuste Positivo</option>
                                <option value="Ajuste Negativo">Ajuste Negativo</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label class="form-label">Producto</label>
                            <select class="form-select" @bind="filtroProductoId">
                                <option value="0">Todos los productos</option>
                                @foreach (var producto in productos)
                                {
                                    <option value="@producto.Id">@producto.Nombre</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label class="form-label">Fecha Desde</label>
                            <input type="date" class="form-control" @bind="filtroFechaInicio" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label class="form-label">Fecha Hasta</label>
                            <input type="date" class="form-control" @bind="filtroFechaFin" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label">Relación Específica</label>
                            <select class="form-select" @bind="filtroRelacion">
                                <option value="">Todas las relaciones</option>
                                <option value="ConCarrito">Con Carrito (Ventas)</option>
                                <option value="ConCompra">Con Compra (Compras)</option>
                                <option value="ConProveedor">Con Proveedor</option>
                                <option value="SinRelacion">Sin Relación Específica</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="text-end">
                    <button class="btn btn-primary" @onclick="AplicarFiltros">
                        <i class="fas fa-search"></i> Aplicar Filtros
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="LimpiarFiltros">
                        <i class="fas fa-broom"></i> Limpiar
                    </button>
                </div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(mensajeInfo))
    {
        <div class="alert alert-info">
            @mensajeInfo
        </div>
    }

    @if (movimientosFiltrados?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Producto</th>
                        <th>Tipo</th>
                        <th>Cantidad</th>
                        <th>Fecha</th>
                        <th>Descripción</th>
                        <th>Detalles Relacionados</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movimiento in movimientosFiltrados)
                    {
                        <tr class="@GetRowClass(movimiento.TipoMovimiento)">
                            <td>@movimiento.Id</td>
                            <td>
                                <strong>@movimiento.Producto?.Nombre</strong>
                                <br />
                                <small class="text-muted">@movimiento.Producto?.Categoria?.Nombre</small>
                            </td>
                            <td>
                                <span class="badge @GetBadgeClass(movimiento.TipoMovimiento)">
                                    @movimiento.TipoMovimiento
                                </span>
                            </td>
                            <td>
                                <span class="@GetCantidadClass(movimiento.TipoMovimiento)">
                                    @(movimiento.TipoMovimiento.Contains("Entrada") || movimiento.TipoMovimiento.Contains("Positivo") || movimiento.TipoMovimiento == "Compra" ? "+" : "-")@movimiento.Cantidad
                                </span>
                            </td>
                            <td>
                                <small>@movimiento.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                            </td>
                            <td>
                                <div class="descripcion-truncado" title="@movimiento.Descripcion">
                                    @(string.IsNullOrEmpty(movimiento.Descripcion) ? "Sin descripción" : movimiento.Descripcion.Length > 50 ? movimiento.Descripcion.Substring(0, 50) + "..." : movimiento.Descripcion)
                                </div>
                            </td>
                            <td>
                                <!-- DETALLES ESPECÍFICOS CON LAS NUEVAS RELACIONES -->
                                @if (movimiento.TipoMovimiento.Contains("Salida") || movimiento.TipoMovimiento == "Venta" || movimiento.TipoMovimiento == "Ajuste Negativo")
                                {
                                    <div class="detalles-movimiento">
                                        @if (movimiento.CarritoId.HasValue && movimiento.CarritoId > 0)
                                        {
                                            <div class="text-center">
                                                <span class="badge bg-info">
                                                    <i class="fas fa-shopping-cart"></i> Venta - Carrito #@movimiento.CarritoId
                                                </span>
                                                <br />
                                                <small class="text-muted">
                                                    Cliente: @movimiento.Carrito?.Usuario?.Nombre @movimiento.Carrito?.Usuario?.Apellido
                                                </small>
                                                <br />
                                                <small class="text-muted">
                                                    Estado: @movimiento.Carrito?.Estado
                                                </small>
                                                <br />
                                                <small class="text-muted">
                                                    Productos: @movimiento.Carrito?.CarritoProductos?.Count
                                                </small>
                                                <br />
                                                <button class="btn btn-sm btn-outline-primary mt-1"
                                                        @onclick="() => VerCarrito(movimiento.CarritoId.Value)"
                                                        title="Ver detalles del carrito">
                                                    <i class="fas fa-external-link-alt"></i> Ver Carrito
                                                </button>
                                            </div>
                                        }
                                        else
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-box"></i> Salida de inventario
                                            </small>
                                            <br />
                                            <small>@movimiento.Descripcion</small>
                                        }
                                    </div>
                                }
                                else if (movimiento.TipoMovimiento.Contains("Entrada") || movimiento.TipoMovimiento == "Compra" || movimiento.TipoMovimiento == "Ajuste Positivo")
                                {
                                    <div class="detalles-movimiento">
                                        @if (movimiento.CompraId.HasValue && movimiento.CompraId > 0)
                                        {
                                            <div class="text-center">
                                                <span class="badge bg-success">
                                                    <i class="fas fa-shopping-bag"></i> Compra #@movimiento.CompraId
                                                </span>
                                                <br />
                                                <small class="text-muted">
                                                    Fecha: @movimiento.Compra?.FechaCompra.ToString("dd/MM/yyyy")
                                                </small>
                                                <br />
                                                <small class="text-muted">
                                                    Productos: @movimiento.Compra?.CompraDetalles?.Count
                                                </small>
                                                <br />
                                                <button class="btn btn-sm btn-outline-success mt-1"
                                                        @onclick="() => VerCompra(movimiento.CompraId.Value)"
                                                        title="Ver detalles de la compra">
                                                    <i class="fas fa-external-link-alt"></i> Ver Compra
                                                </button>
                                            </div>
                                        }
                                        else if (!string.IsNullOrEmpty(movimiento.Proveedor))
                                        {
                                            <div class="text-center">
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-truck"></i> @movimiento.Proveedor
                                                </span>
                                                @if (!string.IsNullOrEmpty(movimiento.NumeroFactura))
                                                {
                                                    <br />
                                                    <small class="text-muted">
                                                        Factura: @movimiento.NumeroFactura
                                                    </small>
                                                }
                                                @if (!string.IsNullOrEmpty(movimiento.NumeroOrdenCompra))
                                                {
                                                    <br />
                                                    <small class="text-muted">
                                                        OC: @movimiento.NumeroOrdenCompra
                                                    </small>
                                                }
                                                @if (movimiento.FechaDocumento.HasValue)
                                                {
                                                    <br />
                                                    <small class="text-muted">
                                                        Fecha: @movimiento.FechaDocumento.Value.ToString("dd/MM/yyyy")
                                                    </small>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-arrow-down"></i> Entrada de inventario
                                            </small>
                                            <br />
                                            <small>@movimiento.Descripcion</small>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <small class="text-muted">
                                        <i class="fas fa-cog"></i> Movimiento del sistema
                                    </small>
                                    <br />
                                    <small>@movimiento.Descripcion</small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <div>
                <span class="text-muted">
                    Mostrando @movimientosFiltrados.Count de @movimientos.Count movimientos
                </span>
            </div>
            <div>
                <small class="text-muted">
                    @estadisticas.TotalEntradas entradas • @estadisticas.TotalSalidas salidas
                </small>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <i class="fas fa-boxes fa-3x mb-3 text-muted"></i>
            <h4>No se encontraron movimientos</h4>
            <p>@(movimientos.Any() ? "No hay movimientos que coincidan con los filtros aplicados." : "No hay movimientos de stock registrados en el sistema.")</p>
            @if (!movimientos.Any())
            {
                <button class="btn btn-primary" @onclick="NuevoMovimiento">
                    <i class="fas fa-plus"></i> Registrar Primer Movimiento
                </button>
            }
        </div>
    }
}

@code {
    private List<StockMovimiento> movimientos = new();
    private List<StockMovimiento> movimientosFiltrados = new();
    private List<Producto> productos = new();
    private bool cargando = true;
    private bool mostrarFiltros = false;
    private string mensajeInfo = "";

    // Filtros
    private string filtroTipoMovimiento = "";
    private int filtroProductoId = 0;
    private DateTime? filtroFechaInicio;
    private DateTime? filtroFechaFin;
    private string filtroRelacion = "";

    private EstadisticasMovimientos estadisticas = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        try
        {
            var movimientosTask = Http.GetFromJsonAsync<List<StockMovimiento>>("api/StockMovimientos");
            var productosTask = Http.GetFromJsonAsync<List<Producto>>("api/Productos");

            await Task.WhenAll(movimientosTask, productosTask);

            movimientos = movimientosTask.Result ?? new();
            productos = productosTask.Result ?? new();

            movimientosFiltrados = movimientos;
            await CargarEstadisticas();

            mensajeInfo = $"Se cargaron {movimientos.Count} movimientos de stock";
        }
        catch (Exception ex)
        {
            mensajeInfo = $"Error al cargar datos: {ex.Message}";
            movimientos = new();
            movimientosFiltrados = new();
            productos = new();
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task CargarEstadisticas()
    {
        try
        {
            var hoy = DateTime.Today;
            var movimientosHoy = movimientos.Count(m => m.Fecha.Date == hoy);
            var totalEntradas = movimientos.Count(m => m.TipoMovimiento.Contains("Entrada") || m.TipoMovimiento == "Compra" || m.TipoMovimiento == "Ajuste Positivo");
            var totalSalidas = movimientos.Count(m => m.TipoMovimiento.Contains("Salida") || m.TipoMovimiento == "Venta" || m.TipoMovimiento == "Ajuste Negativo");

            estadisticas = new EstadisticasMovimientos
            {
                TotalMovimientos = movimientos.Count,
                TotalEntradas = totalEntradas,
                TotalSalidas = totalSalidas,
                MovimientosHoy = movimientosHoy
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando estadísticas: {ex.Message}");
        }
    }

    private void VerCarrito(int carritoId)
    {
        Navigation.NavigateTo($"/carritos/detalles/{carritoId}");
    }

    private void VerCompra(int compraId)
    {
        Navigation.NavigateTo($"/compras/detalles/{compraId}");
    }

    private void ToggleFiltros()
    {
        mostrarFiltros = !mostrarFiltros;
    }

    private void AplicarFiltros()
    {
        movimientosFiltrados = movimientos;

        // Filtro por tipo de movimiento
        if (!string.IsNullOrEmpty(filtroTipoMovimiento))
        {
            movimientosFiltrados = movimientosFiltrados
                .Where(m => m.TipoMovimiento == filtroTipoMovimiento)
                .ToList();
        }

        // Filtro por producto
        if (filtroProductoId > 0)
        {
            movimientosFiltrados = movimientosFiltrados
                .Where(m => m.ProductoId == filtroProductoId)
                .ToList();
        }

        // Filtro por fecha
        if (filtroFechaInicio.HasValue)
        {
            movimientosFiltrados = movimientosFiltrados
                .Where(m => m.Fecha >= filtroFechaInicio.Value)
                .ToList();
        }

        if (filtroFechaFin.HasValue)
        {
            movimientosFiltrados = movimientosFiltrados
                .Where(m => m.Fecha <= filtroFechaFin.Value.AddDays(1).AddSeconds(-1))
                .ToList();
        }

        // Filtro por relación específica
        if (!string.IsNullOrEmpty(filtroRelacion))
        {
            movimientosFiltrados = filtroRelacion switch
            {
                "ConCarrito" => movimientosFiltrados.Where(m => m.CarritoId.HasValue).ToList(),
                "ConCompra" => movimientosFiltrados.Where(m => m.CompraId.HasValue).ToList(),
                "ConProveedor" => movimientosFiltrados.Where(m => !string.IsNullOrEmpty(m.Proveedor)).ToList(),
                "SinRelacion" => movimientosFiltrados.Where(m =>
                    !m.CarritoId.HasValue && !m.CompraId.HasValue && string.IsNullOrEmpty(m.Proveedor)).ToList(),
                _ => movimientosFiltrados
            };
        }

        mensajeInfo = $"Se encontraron {movimientosFiltrados.Count} movimientos con los filtros aplicados";
        StateHasChanged();
    }

    private void LimpiarFiltros()
    {
        filtroTipoMovimiento = "";
        filtroProductoId = 0;
        filtroFechaInicio = null;
        filtroFechaFin = null;
        filtroRelacion = "";
        movimientosFiltrados = movimientos;
        mensajeInfo = "Filtros limpiados";
        StateHasChanged();
    }

    private void NuevoMovimiento()
    {
        Navigation.NavigateTo("/stock-movimientos/nuevo");
    }

    // Métodos auxiliares para estilos
    private string GetBadgeClass(string tipoMovimiento)
    {
        return tipoMovimiento switch
        {
            "Entrada" or "Compra" or "Ajuste Positivo" => "bg-success",
            "Salida" or "Venta" or "Ajuste Negativo" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetRowClass(string tipoMovimiento)
    {
        return tipoMovimiento switch
        {
            "Entrada" or "Compra" or "Ajuste Positivo" => "table-success",
            "Salida" or "Venta" or "Ajuste Negativo" => "table-danger",
            _ => ""
        };
    }

    private string GetCantidadClass(string tipoMovimiento)
    {
        return tipoMovimiento switch
        {
            "Entrada" or "Compra" or "Ajuste Positivo" => "text-success fw-bold",
            "Salida" or "Venta" or "Ajuste Negativo" => "text-danger fw-bold",
            _ => "text-muted"
        };
    }

    // Clases auxiliares
    public class EstadisticasMovimientos
    {
        public int TotalMovimientos { get; set; }
        public int TotalEntradas { get; set; }
        public int TotalSalidas { get; set; }
        public int MovimientosHoy { get; set; }
    }
}

<style>
    .descripcion-truncado {
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        cursor: help;
    }

    .detalles-movimiento {
        max-width: 180px;
        text-align: center;
    }

    .badge {
        font-size: 0.75em;
    }
</style>