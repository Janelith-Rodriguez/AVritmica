@page "/carritos"
@using AVritmica.BD.Data.Entity
@using AVritmica.Client.Servicios.Entidades
@inject ICarritoServicio carritoServicio
@inject NavigationManager navigation

<h3>Gestión de Carritos</h3>

<button class="btn btn-primary mb-3" @onclick="NuevoCarrito">
    <i class="bi bi-cart-plus"></i> Nuevo Carrito
</button>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (error)
{
    <div class="alert alert-danger">
        <h5>Error al cargar los carritos</h5>
        <p>@mensajeError</p>
        <button class="btn btn-warning" @onclick="Recargar">Reintentar</button>
    </div>
}
else if (carritos == null || !carritos.Any())
{
    <div class="alert alert-info">
        No hay carritos registrados.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Estado</th>
                    <th>Monto Total</th>
                    <th>Saldo</th>
                    <th>Fecha Creación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var carrito in carritos)
                {
                    <tr>
                        <td>@carrito.Id</td>
                        <td>@(carrito.Usuario?.Nombre ?? "N/A")</td>
                        <td>
                            <span class="badge @GetEstadoBadgeClass(carrito.Estado)">
                                @carrito.Estado
                            </span>
                        </td>
                        <td>@carrito.MontoTotal.ToString("C")</td>
                        <td>@carrito.Saldo.ToString("C")</td>
                        <td>@carrito.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <button class="btn btn-sm btn-info" @onclick="() => VerDetalles(carrito.Id)" title="Detalles">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-warning" @onclick="() => EditarCarrito(carrito.Id)" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => EliminarCarrito(carrito)" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Carrito>? carritos;
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarCarritos();
    }

    private async Task CargarCarritos()
    {
        try
        {
            cargando = true;
            error = false;
            StateHasChanged();

            var respuesta = await carritoServicio.Get();
            if (!respuesta.Error)
            {
                carritos = respuesta.Respuesta;
            }
            else
            {
                error = true;
                mensajeError = await respuesta.ObtenerError();
            }
        }
        catch (Exception ex)
        {
            error = true;
            mensajeError = $"Error: {ex.Message}";
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private string GetEstadoBadgeClass(string estado)
    {
        return estado?.ToLower() switch
        {
            "activo" => "bg-primary",
            "confirmado" => "bg-success",
            "cancelado" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private void Recargar() => CargarCarritos();
    private void NuevoCarrito() => navigation.NavigateTo("/carritos/nuevo");
    private void EditarCarrito(int id) => navigation.NavigateTo($"/carritos/editar/{id}");
    private void VerDetalles(int id) => navigation.NavigateTo($"/carritos/detalles/{id}");

    private async Task EliminarCarrito(Carrito carrito)
    {
        if (await jsRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar el carrito #{carrito.Id}?"))
        {
            var respuesta = await carritoServicio.Delete(carrito.Id);
            if (!respuesta.Error)
            {
                await CargarCarritos();
                await jsRuntime.InvokeVoidAsync("alert", "Carrito eliminado correctamente");
            }
            else
            {
                var errorMsg = await respuesta.ObtenerError();
                await jsRuntime.InvokeVoidAsync("alert", errorMsg);
            }
        }
    }

    [Inject] private IJSRuntime jsRuntime { get; set; } = default!;
}
