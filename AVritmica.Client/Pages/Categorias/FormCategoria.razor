@page "/categorias/nueva"
@page "/categorias/editar/{Id:int}"
@inject ICategoriaService CategoriaService
@inject NavigationManager Navigation

<h3>@Titulo</h3>

<EditForm Model="categoria" OnValidSubmit="GuardarCategoria">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="nombre">Nombre *</label>
        <InputText id="nombre" @bind-Value="categoria.Nombre" class="form-control" />
        <ValidationMessage For="@(() => categoria.Nombre)" />
    </div>

    <div class="form-group">
        <label for="descripcion">Descripción</label>
        <InputTextArea id="descripcion" @bind-Value="categoria.Descripcion" class="form-control" />
        <ValidationMessage For="@(() => categoria.Descripcion)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary" disabled="@cargando">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar" disabled="@cargando">Cancelar</button>
    </div>
</EditForm>

@if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger mt-3">@mensajeError</div>
}

@code {
    [Parameter] public int Id { get; set; }

    private Categoria categoria = new();
    private bool cargando = false;
    private string mensajeError = string.Empty;
    private string Titulo => Id == 0 ? "Nueva Categoría" : "Editar Categoría";

    protected override async Task OnParametersSetAsync()
    {
        if (Id > 0)
        {
            await CargarCategoria();
        }
    }

    private async Task CargarCategoria()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await CategoriaService.GetCategoria(Id);
        if (!respuesta.Error && respuesta.Respuesta != null)
        {
            categoria = respuesta.Respuesta;
        }
        else
        {
            mensajeError = await respuesta.ObtenerError();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task GuardarCategoria()
    {
        cargando = true;
        mensajeError = string.Empty;
        StateHasChanged();

        try
        {
            if (Id == 0)
            {
                var respuesta = await CategoriaService.CreateCategoria(categoria);
                if (!respuesta.Error)
                {
                    Navigation.NavigateTo("/categorias");
                }
                else
                {
                    mensajeError = await respuesta.ObtenerError();
                }
            }
            else
            {
                var respuesta = await CategoriaService.UpdateCategoria(Id, categoria);
                if (!respuesta.Error)
                {
                    Navigation.NavigateTo("/categorias");
                }
                else
                {
                    mensajeError = await respuesta.ObtenerError();
                }
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
        }

        cargando = false;
        StateHasChanged();
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/categorias");
    }
}
