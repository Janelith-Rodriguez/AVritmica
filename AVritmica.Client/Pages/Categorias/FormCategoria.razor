@page "/categorias/nueva"
@page "/categorias/editar/{Id:int}"
@inject ICategoriaService CategoriaService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<h3>@Titulo</h3>

<EditForm Model="categoria" OnValidSubmit="GuardarCategoria">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row">
        <div class="col-md-8">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre *</label>
                <InputText id="nombre" @bind-Value="categoria.Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                <ValidationMessage For="@(() => categoria.Nombre)" />
            </div>

            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripción</label>
                <InputTextArea id="descripcion" @bind-Value="categoria.Descripcion" class="form-control"
                               placeholder="Ingrese una descripción para la categoría (opcional)"
                               rows="4" />
                <ValidationMessage For="@(() => categoria.Descripcion)" />
                <div class="form-text">La descripción es opcional pero recomendada para mejor organización.</div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary" disabled="@guardando">
            @if (guardando)
            {
                <span>
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Guardando...
                </span>
            }
            else
            {
                <span>
                    <i class="fas fa-save"></i> Guardar
                </span>
            }
        </button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar" disabled="@guardando">
            <i class="fas fa-times"></i> Cancelar
        </button>
    </div>
</EditForm>

@if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger mt-3">
        <i class="fas fa-exclamation-triangle"></i> @mensajeError
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private Categoria categoria = new();
    private bool guardando = false;
    private string mensajeError = string.Empty;
    private string Titulo => Id == 0 ? "Nueva Categoría" : "Editar Categoría";

    protected override async Task OnParametersSetAsync()
    {
        if (Id > 0)
        {
            await CargarCategoria();
        }
    }

    private async Task CargarCategoria()
    {
        guardando = true;
        StateHasChanged();

        try
        {
            var respuesta = await CategoriaService.GetCategoria(Id);
            if (!respuesta.Error && respuesta.Respuesta != null)
            {
                categoria = respuesta.Respuesta;
            }
            else
            {
                mensajeError = await respuesta.ObtenerError();
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar la categoría: {ex.Message}";
        }
        finally
        {
            guardando = false;
            StateHasChanged();
        }
    }

    private async Task GuardarCategoria()
    {
        guardando = true;
        mensajeError = string.Empty;
        StateHasChanged();

        try
        {
            if (string.IsNullOrWhiteSpace(categoria.Nombre))
            {
                mensajeError = "El nombre de la categoría es requerido";
                guardando = false;
                StateHasChanged();
                return;
            }

            if (Id == 0)
            {
                var respuesta = await CategoriaService.CreateCategoria(categoria);
                if (!respuesta.Error)
                {
                    await JS.InvokeVoidAsync("alert", "✅ Categoría creada correctamente");
                    Navigation.NavigateTo("/categorias");
                }
                else
                {
                    mensajeError = await respuesta.ObtenerError();
                }
            }
            else
            {
                var respuesta = await CategoriaService.UpdateCategoria(Id, categoria);
                if (!respuesta.Error)
                {
                    await JS.InvokeVoidAsync("alert", "✅ Categoría actualizada correctamente");
                    Navigation.NavigateTo("/categorias");
                }
                else
                {
                    mensajeError = await respuesta.ObtenerError();
                }
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
        }
        finally
        {
            guardando = false;
            StateHasChanged();
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/categorias");
    }
}
