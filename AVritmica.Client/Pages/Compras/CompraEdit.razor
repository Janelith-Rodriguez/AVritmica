@page "/compras/editar/{id:int}"
@page "/compras/nuevo"
@using AVritmica.Shared.DTO
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation

<h3>@Titulo</h3>

<EditForm Model="compraDTO" OnValidSubmit="GuardarCompra">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="fechaCompra" class="form-label">Fecha de Compra</label>
                <input type="datetime-local" class="form-control" @bind="compraDTO.FechaCompra" />
            </div>

            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripción</label>
                <InputTextArea id="descripcion" class="form-control" @bind-Value="compraDTO.Descripcion"
                               placeholder="Descripción de la compra..." />
            </div>
        </div>

        <div class="col-md-6">
            @if (EsEdicion)
            {
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Estadísticas de la Compra</h6>
                    </div>
                    <div class="card-body">
                        <p><strong>Productos:</strong> <span class="badge bg-primary">@cantidadProductos</span></p>
                        <p><strong>Cantidad Total:</strong> <span class="badge bg-info">@cantidadTotal</span></p>
                        <p><strong>Total Compra:</strong> <strong class="text-success">@totalCompra.ToString("C")</strong></p>
                        <div class="d-grid">
                            <button type="button" class="btn btn-outline-primary btn-sm" @onclick="VerProductos">
                                <i class="fas fa-boxes"></i> Ver Productos
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h6>Información</h6>
                    <p>Después de crear la compra, podrá agregar los productos en la sección de detalles de compra.</p>
                </div>
            }
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary" disabled="@guardando">@BotonGuardarTexto</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>

        @if (EsEdicion)
        {
            <button type="button" class="btn btn-info" @onclick="ActualizarEstadisticas">Actualizar Estadísticas</button>
        }
    </div>
</EditForm>

@code {
    [Parameter] public int Id { get; set; }

    private CompraDTO compraDTO = new();
    private bool guardando = false;
    private bool EsEdicion => Id > 0;
    private int cantidadProductos = 0;
    private int cantidadTotal = 0;
    private decimal totalCompra = 0;

    private string Titulo => EsEdicion ? "Editar Compra" : "Nueva Compra";
    private string BotonGuardarTexto => guardando ? "Guardando..." : "Guardar";

    protected override async Task OnInitializedAsync()
    {
        if (EsEdicion)
        {
            await CargarCompra();
            await CargarEstadisticas();
        }
        else
        {
            // Valores por defecto para nueva compra
            compraDTO.FechaCompra = DateTime.Now;
        }
    }

    private async Task CargarCompra()
    {
        try
        {
            var compra = await Http.GetFromJsonAsync<Compra>($"api/Compras/{Id}");
            if (compra != null)
            {
                compraDTO = new CompraDTO
                {
                    Id = compra.Id,
                    FechaCompra = compra.FechaCompra,
                    Descripcion = compra.Descripcion
                };
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al cargar compra: {ex.Message}");
        }
    }

    private async Task CargarEstadisticas()
    {
        try
        {
            // Obtener cantidad de productos
            var cantidadResponse = await Http.GetAsync($"api/Compras/cantidad-productos/{Id}");
            if (cantidadResponse.IsSuccessStatusCode)
            {
                cantidadTotal = await cantidadResponse.Content.ReadFromJsonAsync<int>();
            }

            // Obtener total de la compra
            var totalResponse = await Http.GetAsync($"api/Compras/total/{Id}");
            if (totalResponse.IsSuccessStatusCode)
            {
                totalCompra = await totalResponse.Content.ReadFromJsonAsync<decimal>();
            }

            // Obtener compra completa para contar productos únicos
            var compra = await Http.GetFromJsonAsync<Compra>($"api/Compras/{Id}");
            if (compra != null)
            {
                cantidadProductos = compra.CompraDetalles.Count;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar estadísticas: {ex.Message}");
        }
    }

    private async Task GuardarCompra()
    {
        guardando = true;
        StateHasChanged();

        try
        {
            HttpResponseMessage response;

            if (EsEdicion)
            {
                // Usar clase anónima para evitar problemas de validación
                var updateRequest = new
                {
                    Id = Id,
                    FechaCompra = compraDTO.FechaCompra,
                    Descripcion = compraDTO.Descripcion
                };
                response = await Http.PutAsJsonAsync($"api/Compras/{Id}", updateRequest);
            }
            else
            {
                // Usar clase anónima para evitar problemas de validación
                var createRequest = new
                {
                    FechaCompra = compraDTO.FechaCompra,
                    Descripcion = compraDTO.Descripcion
                };
                response = await Http.PostAsJsonAsync("api/Compras", createRequest);
            }

            if (response.IsSuccessStatusCode)
            {
                if (EsEdicion)
                {
                    await JS.InvokeVoidAsync("alert", "Compra actualizada correctamente");
                }
                else
                {
                    var compraId = await response.Content.ReadFromJsonAsync<int>();
                    await JS.InvokeVoidAsync("alert", "Compra creada correctamente");
                }
                Navigation.NavigateTo("/compras");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Error: {error}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            guardando = false;
            StateHasChanged();
        }
    }

    private async Task ActualizarEstadisticas()
    {
        await CargarEstadisticas();
        StateHasChanged();
    }

    private void VerProductos()
    {
        Navigation.NavigateTo($"/compra-detalles?compraId={Id}");
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/compras");
    }
}
