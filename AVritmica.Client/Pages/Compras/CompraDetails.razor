@page "/compras/detalles/{id:int}"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation

<h3>Detalles de la Compra</h3>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-2">Cargando información de la compra...</p>
    </div>
}
else if (compra == null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle me-2"></i> Compra no encontrada
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i> Información de la Compra
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td class="text-muted" width="40%"><strong>Fecha:</strong></td>
                            <td>@compra.FechaCompra.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td class="text-muted"><strong>Descripción:</strong></td>
                            <td>
                                @if (string.IsNullOrEmpty(compra.Descripcion))
                                {
                                    <span class="text-muted">Sin descripción</span>
                                }
                                else
                                {
                                    @compra.Descripcion
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i> Resumen de la Compra
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="card bg-primary text-white mb-3">
                                <div class="card-body py-3">
                                    <h4>@compra.CompraDetalles.Count</h4>
                                    <small>Productos</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card bg-info text-white mb-3">
                                <div class="card-body py-3">
                                    <h4>@compra.CompraDetalles.Sum(cd => cd.Cantidad)</h4>
                                    <small>Unidades</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <h3 class="text-success">@compra.CompraDetalles.Sum(cd => cd.Cantidad * cd.PrecioCompra).ToString("C")</h3>
                        <small class="text-muted">Total de la compra</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-boxes me-2"></i> Productos Comprados
                    </h5>
                    <span class="badge bg-primary fs-6">@compra.CompraDetalles.Count productos</span>
                </div>
                <div class="card-body">
                    @if (compra.CompraDetalles.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Producto</th>
                                        <th>Categoría</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-end">Precio Compra</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detalle in compra.CompraDetalles)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@detalle.Producto?.Nombre</strong>
                                                @if (!string.IsNullOrEmpty(detalle.Producto?.Descripcion))
                                                {
                                                    <br>
                                                    <small class="text-muted">@detalle.Producto.Descripcion</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@detalle.Producto?.Categoria?.Nombre</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary rounded-pill">@detalle.Cantidad</span>
                                            </td>
                                            <td class="text-end">@detalle.PrecioCompra.ToString("C")</td>
                                            <td class="text-end">
                                                <strong class="text-success">@((detalle.Cantidad * detalle.PrecioCompra).ToString("C"))</strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-primary">
                                    <tr>
                                        <td colspan="3"></td>
                                        <td class="text-end"><strong>Total:</strong></td>
                                        <td class="text-end">
                                            <strong class="fs-5">@compra.CompraDetalles.Sum(cd => cd.Cantidad * cd.PrecioCompra).ToString("C")</strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No hay productos en esta compra.</p>
                            <button class="btn btn-primary" @onclick="AgregarProductos">
                                <i class="fas fa-plus me-1"></i> Agregar Productos
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <div class="btn-group" role="group">
            <button class="btn btn-secondary" @onclick="Volver">
                <i class="fas fa-arrow-left me-1"></i> Volver
            </button>
            <button class="btn btn-warning" @onclick="Editar">
                <i class="fas fa-pencil-alt me-1"></i> Editar
            </button>
            <button class="btn btn-success" @onclick="AgregarProductos">
                <i class="fas fa-plus me-1"></i> Agregar Productos
            </button>
            <button class="btn btn-outline-info" @onclick="ExportarDetalles">
                <i class="fas fa-download me-1"></i> Exportar Detalles
            </button>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private Compra? compra;
    private bool cargando = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarCompra();
    }

    private async Task CargarCompra()
    {
        try
        {
            compra = await Http.GetFromJsonAsync<Compra>($"api/Compras/{Id}");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"❌ Error al cargar compra: {ex.Message}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private void Volver()
    {
        Navigation.NavigateTo("/compras");
    }

    private void Editar()
    {
        Navigation.NavigateTo($"/compras/editar/{Id}");
    }

    private void AgregarProductos()
    {
        Navigation.NavigateTo($"/compra-detalles/{Id}");
    }

    private async Task ExportarDetalles()
    {
        try
        {
            var detallesExportar = new
            {
                Compra = new
                {
                    Fecha = compra.FechaCompra.ToString("dd/MM/yyyy HH:mm"),
                    Descripcion = compra.Descripcion ?? "Sin descripción"
                },
                Productos = compra.CompraDetalles.Select(d => new
                {
                    Producto = d.Producto?.Nombre,
                    Categoria = d.Producto?.Categoria?.Nombre,
                    Cantidad = d.Cantidad,
                    Precio_Compra = d.PrecioCompra,
                    Subtotal = d.Cantidad * d.PrecioCompra
                }),
                Resumen = new
                {
                    Total_Productos = compra.CompraDetalles.Count,
                    Total_Unidades = compra.CompraDetalles.Sum(d => d.Cantidad),
                    Total_Compra = compra.CompraDetalles.Sum(d => d.Cantidad * d.PrecioCompra)
                }
            };

            var json = System.Text.Json.JsonSerializer.Serialize(detallesExportar, new System.Text.Json.JsonSerializerOptions
            {
                WriteIndented = true
            });

            await JS.InvokeVoidAsync("descargarArchivo", $"compra-{compra.FechaCompra:yyyyMMdd}-detalles.json", json);
            await JS.InvokeVoidAsync("alert", "✅ Detalles de compra exportados correctamente");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"❌ Error al exportar: {ex.Message}");
        }
    }

    // Clases para la entidad
    public class Compra
    {
        public int Id { get; set; }
        public DateTime FechaCompra { get; set; }
        public string? Descripcion { get; set; }
        public List<CompraDetalle> CompraDetalles { get; set; } = new();
    }

    public class CompraDetalle
    {
        public int Id { get; set; }
        public int CompraId { get; set; }
        public int ProductoId { get; set; }
        public int Cantidad { get; set; }
        public decimal PrecioCompra { get; set; }
        public Producto? Producto { get; set; }
    }

    public class Producto
    {
        public int Id { get; set; }
        public string? Nombre { get; set; }
        public string? Descripcion { get; set; }
        public Categoria? Categoria { get; set; }
    }

    public class Categoria
    {
        public int Id { get; set; }
        public string? Nombre { get; set; }
    }
}
