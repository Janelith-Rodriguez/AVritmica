@page "/compras/detalles/{id:int}"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation

<h3>Detalles de la Compra</h3>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (compra == null)
{
    <div class="alert alert-danger">
        Compra no encontrada
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Información de la Compra</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> @compra.Id</p>
                    <p><strong>Fecha:</strong> @compra.FechaCompra.ToString("dd/MM/yyyy HH:mm")</p>
                    <p>
                        <strong>Descripción:</strong>
                        @if (string.IsNullOrEmpty(compra.Descripcion))
                        {
                            <span class="text-muted">Sin descripción</span>
                        }
                        else
                        {
                            @compra.Descripcion
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Resumen de la Compra</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="card bg-primary text-white mb-3">
                                <div class="card-body">
                                    <h4>@compra.CompraDetalles.Count</h4>
                                    <small>Productos</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card bg-success text-white mb-3">
                                <div class="card-body">
                                    <h4>@compra.CompraDetalles.Sum(cd => cd.Cantidad)</h4>
                                    <small>Unidades</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <h3 class="text-success">@compra.CompraDetalles.Sum(cd => cd.Cantidad * cd.PrecioCompra).ToString("C")</h3>
                        <small class="text-muted">Total de la compra</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Productos Comprados</h5>
                    <span class="badge bg-primary">@compra.CompraDetalles.Count productos</span>
                </div>
                <div class="card-body">
                    @if (compra.CompraDetalles.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Categoría</th>
                                        <th>Cantidad</th>
                                        <th>Precio Compra</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detalle in compra.CompraDetalles)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@detalle.Producto?.Nombre</strong>
                                                @if (!string.IsNullOrEmpty(detalle.Producto?.Descripcion))
                                                {
                                                    <br>
                                                    <small class="text-muted">@detalle.Producto.Descripcion</small>
                                                }
                                            </td>
                                            <td>@detalle.Producto?.Categoria?.Nombre</td>
                                            <td>
                                                <span class="badge bg-info">@detalle.Cantidad</span>
                                            </td>
                                            <td>@detalle.PrecioCompra.ToString("C")</td>
                                            <td>
                                                <strong>@((detalle.Cantidad * detalle.PrecioCompra).ToString("C"))</strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-primary">
                                        <td colspan="3"></td>
                                        <td class="text-end"><strong>Total:</strong></td>
                                        <td><strong>@compra.CompraDetalles.Sum(cd => cd.Cantidad * cd.PrecioCompra).ToString("C")</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No hay productos en esta compra.</p>
                            <button class="btn btn-primary" @onclick="AgregarProductos">
                                <i class="fas fa-plus"></i> Agregar Productos
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-secondary" @onclick="Volver">Volver</button>
        <button class="btn btn-primary" @onclick="Editar">Editar</button>
        <button class="btn btn-info" @onclick="AgregarProductos">Agregar Productos</button>
        <button class="btn btn-outline-success" @onclick="ExportarDetalles">Exportar Detalles</button>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private Compra? compra;
    private bool cargando = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarCompra();
    }

    private async Task CargarCompra()
    {
        try
        {
            compra = await Http.GetFromJsonAsync<Compra>($"api/Compras/{Id}");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al cargar compra: {ex.Message}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private void Volver()
    {
        Navigation.NavigateTo("/compras");
    }

    private void Editar()
    {
        Navigation.NavigateTo($"/compras/editar/{Id}");
    }

    private void AgregarProductos()
    {
        Navigation.NavigateTo($"/compra-detalles?compraId={Id}");
    }

    private async Task ExportarDetalles()
    {
        try
        {
            var detallesExportar = new
            {
                Compra = new
                {
                    ID = compra.Id,
                    Fecha = compra.FechaCompra.ToString("dd/MM/yyyy HH:mm"),
                    Descripcion = compra.Descripcion
                },
                Productos = compra.CompraDetalles.Select(d => new
                {
                    Producto = d.Producto?.Nombre,
                    Categoria = d.Producto?.Categoria?.Nombre,
                    Cantidad = d.Cantidad,
                    Precio_Compra = d.PrecioCompra,
                    Subtotal = d.Cantidad * d.PrecioCompra
                }),
                Resumen = new
                {
                    Total_Productos = compra.CompraDetalles.Count,
                    Total_Unidades = compra.CompraDetalles.Sum(d => d.Cantidad),
                    Total_Compra = compra.CompraDetalles.Sum(d => d.Cantidad * d.PrecioCompra)
                }
            };

            var json = System.Text.Json.JsonSerializer.Serialize(detallesExportar, new System.Text.Json.JsonSerializerOptions
            {
                WriteIndented = true
            });

            await JS.InvokeVoidAsync("descargarArchivo", $"compra-{compra.Id}-detalles.json", json);
            await JS.InvokeVoidAsync("alert", "Detalles de compra exportados correctamente");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al exportar: {ex.Message}");
        }
    }
}
