@page "/compras"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation

<h3>Gestión de Compras</h3>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="NuevaCompra">
            <i class="fas fa-plus me-1"></i> Nueva Compra
        </button>
        <button class="btn btn-success" @onclick="CrearCompraConDetalles">
            <i class="fas fa-shopping-cart me-1"></i> Compra con Detalles
        </button>
        <button class="btn btn-outline-secondary" @onclick="Refrescar">
            <i class="fas fa-sync-alt me-1"></i> Refrescar
        </button>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Buscar por descripción..." @bind="terminoBusqueda" @oninput="OnBuscar" />
        </div>
        <div class="col-md-4">
            <button class="btn btn-info w-100" @onclick="MostrarFiltroFechas">
                <i class="fas fa-calendar-alt me-1"></i> Filtrar por Fechas
            </button>
        </div>
        <div class="col-md-4">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button class="btn btn-warning" @onclick="ExportarComprasCSV">
                    <i class="fas fa-download me-1"></i> Exportar
                </button>
            </div>
        </div>
    </div>

    @if (mostrarFiltroFechas)
    {
        <div class="row mb-3 p-3 border rounded bg-light">
            <div class="col-md-4">
                <label class="form-label">Fecha Inicio</label>
                <input type="date" class="form-control" @bind="fechaInicio" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Fecha Fin</label>
                <input type="date" class="form-control" @bind="fechaFin" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button class="btn btn-primary me-2" @onclick="AplicarFiltroFechas">
                    <i class="fas fa-filter me-1"></i> Aplicar
                </button>
                <button class="btn btn-secondary" @onclick="LimpiarFiltroFechas">
                    <i class="fas fa-times me-1"></i> Limpiar
                </button>
            </div>
        </div>
    }

    @if (compras?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha Compra</th>
                        <th>Descripción</th>
                        <th>Productos</th>
                        <th>Cantidad Total</th>
                        <th>Total Compra</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var compra in comprasFiltradas)
                    {
                        <tr>
                            <td>
                                <strong>@compra.FechaCompra.ToString("dd/MM/yyyy")</strong><br>
                                <small class="text-muted">@compra.FechaCompra.ToString("HH:mm")</small>
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(compra.Descripcion))
                                {
                                    <span class="text-muted">Sin descripción</span>
                                }
                                else
                                {
                                    @compra.Descripcion
                                }
                            </td>
                            <td>
                                <span class="badge bg-primary">@compra.CompraDetalles.Count</span>
                            </td>
                            <td>
                                <span class="badge bg-info">@compra.CompraDetalles.Sum(cd => cd.Cantidad)</span>
                            </td>
                            <td>
                                <strong>@compra.CompraDetalles.Sum(cd => cd.Cantidad * cd.PrecioCompra).ToString("C")</strong>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <button class="btn btn-info" @onclick="() => VerDetalles(compra.Id)" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-warning" @onclick="() => EditarCompra(compra.Id)" title="Editar">
                                        <i class="fas fa-pencil-alt"></i>
                                    </button>
                                    <button class="btn btn-danger" @onclick="() => EliminarCompra(compra)" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <button class="btn btn-success" @onclick="() => VerDetallesCompra(compra.Id)" title="Ver productos">
                                        <i class="fas fa-boxes"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-primary">
                        <td colspan="2" class="text-end"><strong>Total General:</strong></td>
                        <td><strong>@comprasFiltradas.Sum(c => c.CompraDetalles.Count)</strong></td>
                        <td><strong>@comprasFiltradas.Sum(c => c.CompraDetalles.Sum(cd => cd.Cantidad))</strong></td>
                        <td><strong>@comprasFiltradas.Sum(c => c.CompraDetalles.Sum(cd => cd.Cantidad * cd.PrecioCompra)).ToString("C")</strong></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="alert alert-info">
            <i class="fas fa-chart-bar me-2"></i>
            <strong>Resumen:</strong>
            @comprasFiltradas.Count compras -
            @comprasFiltradas.Sum(c => c.CompraDetalles.Count) productos -
            Total: @comprasFiltradas.Sum(c => c.CompraDetalles.Sum(cd => cd.Cantidad * cd.PrecioCompra)).ToString("C")
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            No se encontraron compras.
        </div>
    }
}

@code {
    private List<Compra> compras = new();
    private List<Compra> comprasFiltradas = new();
    private bool cargando = true;
    private string terminoBusqueda = string.Empty;
    private bool mostrarFiltroFechas = false;
    private DateTime fechaInicio = DateTime.Today.AddDays(-30);
    private DateTime fechaFin = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        await CargarCompras();
    }

    private async Task CargarCompras()
    {
        cargando = true;
        StateHasChanged();

        try
        {
            compras = await Http.GetFromJsonAsync<List<Compra>>("api/Compras") ?? new();
            FiltrarCompras();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error al cargar compras: {ex.Message}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private void FiltrarCompras()
    {
        comprasFiltradas = compras;

        if (!string.IsNullOrEmpty(terminoBusqueda))
        {
            comprasFiltradas = comprasFiltradas.Where(c =>
                c.Descripcion?.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase) == true
            ).ToList();
        }
    }

    private void OnBuscar(ChangeEventArgs e)
    {
        terminoBusqueda = e.Value?.ToString() ?? string.Empty;
        FiltrarCompras();
    }

    private void MostrarFiltroFechas()
    {
        mostrarFiltroFechas = !mostrarFiltroFechas;
    }

    private async Task AplicarFiltroFechas()
    {
        try
        {
            var comprasFiltradasPorFecha = await Http.GetFromJsonAsync<List<Compra>>(
                $"api/Compras/GetByRangoFechas?fechaInicio={fechaInicio:yyyy-MM-dd}&fechaFin={fechaFin:yyyy-MM-dd}");

            if (comprasFiltradasPorFecha != null)
            {
                comprasFiltradas = comprasFiltradasPorFecha;
                await JS.InvokeVoidAsync("alert", $"✅ Se encontraron {comprasFiltradas.Count} compras en el rango de fechas");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"❌ Error al filtrar por fechas: {ex.Message}");
        }
    }

    private async Task LimpiarFiltroFechas()
    {
        fechaInicio = DateTime.Today.AddDays(-30);
        fechaFin = DateTime.Today;
        await CargarCompras();
        FiltrarCompras();
        await JS.InvokeVoidAsync("alert", "✅ Filtros de fecha limpiados");
    }

    private void NuevaCompra()
    {
        Navigation.NavigateTo("/compras/nuevo");
    }

    private async Task CrearCompraConDetalles()
    {
        var descripcion = await JS.InvokeAsync<string>("prompt", "Descripción de la compra:", "Compra de productos");

        if (!string.IsNullOrEmpty(descripcion))
        {
            try
            {
                var request = new
                {
                    FechaCompra = DateTime.UtcNow,
                    Descripcion = descripcion,
                    Detalles = new List<object>()
                };

                var response = await Http.PostAsJsonAsync("api/Compras/crear-con-detalles", request);

                if (response.IsSuccessStatusCode)
                {
                    var compraId = await response.Content.ReadFromJsonAsync<int>();
                    await JS.InvokeVoidAsync("alert", "✅ Compra creada correctamente. Ahora puede agregar productos.");
                    Navigation.NavigateTo($"/compra-detalles/{compraId}");
                }
                else
                {
                    var error = await response.Content.ReadAsStringAsync();
                    await JS.InvokeVoidAsync("alert", $"❌ Error al crear compra: {error}");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"❌ Error: {ex.Message}");
            }
        }
    }

    private void VerDetalles(int id)
    {
        Navigation.NavigateTo($"/compras/detalles/{id}");
    }

    private void EditarCompra(int id)
    {
        Navigation.NavigateTo($"/compras/editar/{id}");
    }

    private void VerDetallesCompra(int id)
    {
        Navigation.NavigateTo($"/compra-detalles/{id}");
    }

    private async Task EliminarCompra(Compra compra)
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm",
            $"¿Está seguro de eliminar la compra del {compra.FechaCompra.ToString("dd/MM/yyyy")}?\n\n" +
            $"Descripción: {compra.Descripcion ?? "Sin descripción"}\n" +
            $"Productos: {compra.CompraDetalles.Count}\n" +
            $"Total: {compra.CompraDetalles.Sum(cd => cd.Cantidad * cd.PrecioCompra).ToString("C")}\n\n" +
            "Esta acción eliminará todos los productos asociados y no se puede deshacer.");

        if (confirmado)
        {
            try
            {
                var response = await Http.DeleteAsync($"api/Compras/{compra.Id}");

                if (response.IsSuccessStatusCode)
                {
                    await JS.InvokeVoidAsync("alert", "✅ Compra eliminada correctamente");
                    await CargarCompras();
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", "❌ Error al eliminar la compra");
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"❌ Error: {ex.Message}");
            }
        }
    }

    private async Task ExportarComprasCSV()
    {
        try
        {
            // Crear contenido CSV
            var csvContent = new System.Text.StringBuilder();

            // Encabezados
            csvContent.AppendLine("Fecha,Descripción,Productos,Unidades,Total");

            // Datos
            foreach (var compra in comprasFiltradas)
            {
                var descripcion = (compra.Descripcion ?? "Sin descripción").Replace(",", ";");
                var total = compra.CompraDetalles.Sum(cd => cd.Cantidad * cd.PrecioCompra);

                csvContent.AppendLine(
                    $"{compra.FechaCompra:dd/MM/yyyy HH:mm}," +
                    $"{descripcion}," +
                    $"{compra.CompraDetalles.Count}," +
                    $"{compra.CompraDetalles.Sum(cd => cd.Cantidad)}," +
                    $"{total:F2}"
                );
            }

            // Totales
            var totalCompras = comprasFiltradas.Count;
            var totalUnidades = comprasFiltradas.Sum(c => c.CompraDetalles.Sum(cd => cd.Cantidad));
            var totalGeneral = comprasFiltradas.Sum(c => c.CompraDetalles.Sum(cd => cd.Cantidad * cd.PrecioCompra));

            csvContent.AppendLine();
            csvContent.AppendLine("RESUMEN");
            csvContent.AppendLine($"Total Compras,{totalCompras}");
            csvContent.AppendLine($"Total Unidades,{totalUnidades}");
            csvContent.AppendLine($"Total General,{totalGeneral:F2}");

            await JS.InvokeVoidAsync("descargarCSV", "compras.csv", csvContent.ToString());
            await JS.InvokeVoidAsync("alert", "✅ Archivo CSV descargado correctamente");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"❌ Error al exportar CSV: {ex.Message}");
        }
    }

    private async Task Refrescar()
    {
        await CargarCompras();
        await JS.InvokeVoidAsync("alert", "✅ Lista de compras actualizada");
    }

    // Clases para la entidad
    public class Compra
    {
        public int Id { get; set; }
        public DateTime FechaCompra { get; set; }
        public string? Descripcion { get; set; }
        public List<CompraDetalle> CompraDetalles { get; set; } = new();
    }

    public class CompraDetalle
    {
        public int Id { get; set; }
        public int CompraId { get; set; }
        public int ProductoId { get; set; }
        public int Cantidad { get; set; }
        public decimal PrecioCompra { get; set; }
        public Producto? Producto { get; set; }
    }

    public class Producto
    {
        public int Id { get; set; }
        public string? Nombre { get; set; }
        public string? Descripcion { get; set; }
        public Categoria? Categoria { get; set; }
    }

    public class Categoria
    {
        public int Id { get; set; }
        public string? Nombre { get; set; }
    }
}